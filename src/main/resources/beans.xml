<?xml version="1.0" encoding="UTF-8" ?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="actor1" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Tom"></constructor-arg>
        <constructor-arg name="gender" value="male"></constructor-arg>
        <constructor-arg name="age" value="35"></constructor-arg>
    </bean>

    <bean id="actor2" class="com.stackroute.domain.Actor">
        <constructor-arg index="0" value="Henry"></constructor-arg>
        <constructor-arg index="1" value="male"></constructor-arg>
        <constructor-arg index="2" value="40"></constructor-arg>
    </bean>

    <bean id="actor3" class="com.stackroute.domain.Actor">
        <constructor-arg type="String" value="Mary"></constructor-arg>
        <constructor-arg type="String" value="female"></constructor-arg>
        <constructor-arg type="int" value="26"></constructor-arg>
    </bean>

    <bean name="movie1" class="com.stackroute.domain.Movie" autowire="byName">

    </bean>


    <bean name="movie2" class="com.stackroute.domain.Movie">
        <constructor-arg index="0" ref="actor1"></constructor-arg>
        <constructor-arg index="1" ref="actor2"></constructor-arg>
        <constructor-arg index="2" ref="actor3"></constructor-arg>
    </bean>



</beans>